{
  "name": "vscode-coding-stats",
  "displayName": "Coding Stats",
  "version": "0.0.1-dev",
  "publisher": "paultirk",
  "engines": {
    "vscode": "^1.59.0"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "*"
  ],
  "extensionDependencies": [
    "vscode.git"
  ],
  "contributes": {
    "configuration": {
      "title": "Coding Stats Configuration",
      "properties": {
        "codingStats.serverUrl": {
          "type": "string",
          "default": "http://127.0.0.1:10333",
          "title": "%configuration.serverUrl.title%",
          "description": "%configuration.serverUrl.description%"
        },
        "codingStats.port": {
          "type": "number",
          "default": 10333,
          "title": "%configuration.port.title%",
          "description": "%configuration.port.description%"
        },
        "codingStats.computerId": {
          "type": "string",
          "default": "",
          "title": "%configuration.computerId.title%",
          "description": "%configuration.computerId.description%"
        },
        "codingStats.localServerMode": {
          "type": "boolean",
          "default": true,
          "title": "%configuration.localServerMode.title%",
          "description": "%configuration.localServerMode.description%"
        },
        "codingStats.localServerDataDirectory": {
          "type": "string",
          "default": "",
          "title": "%configuration.localServerDataDirectory.title%",
          "description": "%configuration.localServerDataDirectory.description%"
        },
        "codingStats.showStatus": {
          "type": "boolean",
          "default": true,
          "title": "%configuration.showStatus.title%",
          "description": "%configuration.showStatus.description%"
        },
        "codingStats.debugLogging": {
          "type": "boolean",
          "default": false,
          "title": "%configuration.debugLogging.title%",
          "description": "%configuration.debugLogging.description%"
        }
      }
    },
    "commands": [
      {
        "command": "codingStats.showReport",
        "category": "Coding Stats",
        "title": "%command.showReport%"
      },
      {
        "command": "codingStats.restartLocalServer",
        "category": "Coding Stats",
        "title": "%command.restartLocalServer%"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codingStats",
          "title": "Coding Stats",
          "icon": "$(dashboard)"
        }
      ]
    },
    "views": {
      "codingStats": [
        {
          "id": "codingStats.summaryView",
          "name": "%views.summary.name%",
          "type": "tree"
        },
        {
          "id": "codingStats.reposView",
          "name": "%views.repos.name%",
          "type": "tree"
        },
        {
          "id": "codingStats.workspaceFoldersView",
          "name": "%views.folders.name%",
          "type": "tree"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "esbuild-base": "node esbuild.mjs",
    "compile": "ESBUILD_MODE=production npm run esbuild-base",
    "compile-dev": "ESBUILD_MODE=development npm run esbuild-base",
    "lint": "eslint . --ext .ts,.tsx",
    "watch": "ESBUILD_MODE=development ESBUILD_WATCH=true npm run esbuild-base"
  },
  "dependencies": {
    "moment": "^2.29.1",
    "moment-duration-format": "^2.3.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.12",
    "@types/moment-duration-format": "^2.2.3",
    "@types/node": "^16.7.4",
    "@types/vscode": "^1.59.0",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "esbuild": "^0.12.25",
    "eslint": "^7.32.0",
    "typescript": "^4.3.5",
    "vsce": "^1.99.0"
  }
}
